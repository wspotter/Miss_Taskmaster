# Miss_TaskMaster Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Key (if using LLM features)
OPENAI_API_KEY=your_openai_api_key_here

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://redis:6379/0

# PostgreSQL Configuration (if using PostgreSQL for persistence)
# POSTGRES_PASSWORD=your_secure_db_password
# POSTGRES_USER=supermanus
# POSTGRES_DB=miss_taskmaster

# Prometheus Configuration
PROMETHEUS_PASSWORD=admin

# Grafana Configuration
GRAFANA_PASSWORD=admin

# MCP Server Configuration
MCP_SERVER_PORT=8000
MCP_SERVER_HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=mcp_server.log

# Performance Monitoring
METRICS_ENABLED=true
METRICS_COLLECTION_INTERVAL=30

# Security
SECRET_KEY=your_secret_key_here

# Development Settings
DEBUG=true
RELOAD=true

# Paths (automatically handled by Docker)
# DATA_DIR=/app/data
# LOGS_DIR=/app/logs
# CONFIG_DIR=/app/config